--langdef=blitzmax
--langmap=blitzmax:.bmx
--regex-blitzmax=/^\s*Type\s+([a-zA-Z0-9_]+)/\1/t,Type/{scope=push},i
--regex-blitzmax=/^\s*Struct\s+([a-zA-Z0-9_]+)/\1/s,Struct/{scope=push},i
--regex-blitzmax=/^\s*Enum\s+([a-zA-Z0-9_]+)/\1/e,Enum/{scope=push},i
--regex-blitzmax=/^\s*Const\s+([a-zA-Z0-9_]+)/\1/c,Constants/{scope=ref},i
--regex-blitzmax=/^\s*Global\s+([a-zA-Z0-9_]+)/\1/g,Globals/{scope=ref},i
--regex-blitzmax=/^\s*Field\s+([a-zA-Z0-9_]+)/\1/i,Fields/{scope=ref},i
--regex-blitzmax=/^\s*Method\s+([a-zA-Z0-9_]+)/\1/m,Method/{scope=ref}{scope=push},i
--regex-blitzmax=/^\s*Function\s+([a-zA-Z0-9_]+)/\1/f,Function/{scope=ref}{scope=push},i
--regex-blitzmax=/^\s*End\s*(Type|Struct|Enum|Function|Method)\s*//{scope=pop},i
